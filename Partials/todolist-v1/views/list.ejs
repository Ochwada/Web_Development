<body>
    <h1>Today is: <%= kindOfDay %>
    </h1>
    <ul class="listItem">
        <li>Read Emails</li>
        <li>Make calls</li>
        <li>Check on Tasks</li>
       
        <%for ( var i = 0; i < newListItems.length; i++) { %>
            <li><%=newListItems[i] %></li>
        <%}%>
    </ul>

    <form class="" action="/" method="post">
        <input type="text" placeholder="New To Do" name="newItem" />
        <button type="submit" type="button">Add</button>
    </form>

